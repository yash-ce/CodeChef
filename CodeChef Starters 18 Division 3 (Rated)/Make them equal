//  https://www.codechef.com/START18C/problems/MAKEEQUAL

#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    
	    int n;
	    cin>>n;
	    int a[n];
	    
	    for(int i=0;i<n;i++){
	        cin>>a[i];
	    }
	    
	    int m = a[0];
	    int m2 = a[0];
	    for(int i=0;i<n;i++){
	        if(a[i] > m){
	            m = a[i];
	        }
	        if(a[i] < m2){
	            m2 = a[i];
	        }
	    }
	   cout<<m-m2<<endl;
	    
	}
	return 0;
}
