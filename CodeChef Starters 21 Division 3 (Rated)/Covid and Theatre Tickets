#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int a, b;
	    cin>>a>>b;
	    if(a%2 != 0){
	        a = a+1;
	    }
	    if(b%2 != 0){
	        b = b+1;
	    }
	    
	    cout<<(a/2)*(b/2)<<endl;
	    
	    
	    
	    
	    
	}
	return 0;
}
