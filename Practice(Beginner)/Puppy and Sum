// https://www.codechef.com/problems/PPSUM

#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int D, N;
	    cin>>D>>N;
	    int sum = 0;
	    for(int i=0;i<D;i++){
	        sum = 0;
	        for(int j=1;j<=N;j++){
	            sum += j;
	        }
	        N = sum;
	       // cout<<sum<<endl;
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
