// https://www.codechef.com/SEPT21C/problems/TRAVELPS

#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int n;
	string s;
	cin>>n;
	while(n--){
	    int a[3];
	    for(int i=0;i<3;i++){
	        cin>>a[i];
	    }
	    cin>>s;
	    int n1 =0;
	    int n2 = 0;
	    for(int i=0;i<a[0];i++){
	        if(s[i] == '0'){
	            n1++;
	        }
	        else{
	            n2++;
	        }
	    }
	   // cout<<n1;
	   // cout<<n2;
	    cout<<(n1*a[1])+(n2*a[2])<<endl;
	    
	    
	}
	return 0;
}
